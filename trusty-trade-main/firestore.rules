rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isEmailVerified() {
      return request.auth.token.email_verified == true;
    }

    // Users collection - users can only access their own data
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      allow read: if isAdmin(); // Admins can read all user profiles
      allow create: if isAuthenticated() && request.auth.uid == userId;
    }

    // Products collection
    match /products/{productId} {
      // Anyone can read listed products
      allow read: if resource.data.status == 'listed';
      
      // Only authenticated, verified users can create products
      allow create: if isAuthenticated() && 
                       isEmailVerified() &&
                       request.auth.uid == request.resource.data.sellerId;
      
      // Only the seller can update their own products
      allow update: if isAuthenticated() && 
                       request.auth.uid == resource.data.sellerId;
      
      // Only the seller or admin can delete products
      allow delete: if isAuthenticated() && 
                       (request.auth.uid == resource.data.sellerId || isAdmin());
    }

    // Orders collection
    match /orders/{orderId} {
      // Only buyer, seller, or admin can read orders
      allow read: if isAuthenticated() && 
                     (request.auth.uid == resource.data.buyerId || 
                      request.auth.uid == resource.data.sellerId || 
                      isAdmin());
      
      // Only authenticated, verified users can create orders
      allow create: if isAuthenticated() && 
                       isEmailVerified() &&
                       request.auth.uid == request.resource.data.buyerId;
      
      // Only buyer, seller, or admin can update orders
      allow update: if isAuthenticated() && 
                       (request.auth.uid == resource.data.buyerId || 
                        request.auth.uid == resource.data.sellerId || 
                        isAdmin());
    }

    // Disputes collection
    match /disputes/{disputeId} {
      // Only buyer, seller, or admin can read disputes
      allow read: if isAuthenticated() && 
                     (request.auth.uid == resource.data.buyerId || 
                      request.auth.uid == resource.data.sellerId || 
                      isAdmin());
      
      // Only buyer can create disputes
      allow create: if isAuthenticated() && 
                       isEmailVerified() &&
                       request.auth.uid == request.resource.data.buyerId;
      
      // Only admin can update disputes (resolve them)
      allow update: if isAdmin();
    }

    // Wallet transactions - read-only for users, admin can manage
    match /walletTransactions/{transactionId} {
      // Users can only read their own transactions
      allow read: if isAuthenticated() && 
                     request.auth.uid == resource.data.userId;
      
      // Only system/admin can create transactions
      allow create: if isAdmin();
      
      // Admin can read all transactions
      allow read: if isAdmin();
    }

    // Notifications collection
    match /notifications/{notificationId} {
      // Users can only read their own notifications
      allow read: if isAuthenticated() && 
                     request.auth.uid == resource.data.userId;
      
      // Users can update their own notifications (mark as read)
      allow update: if isAuthenticated() && 
                       request.auth.uid == resource.data.userId &&
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read']);
      
      // System/admin can create notifications
      allow create: if isAdmin();
      
      // Admin can read all notifications
      allow read: if isAdmin();
    }

    // Admin-only collections for reports, logs, etc.
    match /adminLogs/{logId} {
      allow read, write: if isAdmin();
    }
    
    match /userReports/{reportId} {
      allow read, write: if isAdmin();
      allow create: if isAuthenticated() && isEmailVerified();
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}